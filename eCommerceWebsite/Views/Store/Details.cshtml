@model eCommerceWebsite.Models.ProductResult
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}
<div class="col-md-12">
    <div class="col-md-12">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="col-md-12">

                        <div class="col-md-12" style="margin-top: 40px;">
                            <div class="row">
                                @Html.ActionLink("Home", "Index", "Home",null,  new { @style = "color: #666666; text-decoration: underline;" }) > @Model.Category > @Model.Name
                            </div>
                            <div class="row" style="margin-top: 40px;">
                                <div class="col-md-7">
                                    <img src="@Model.ImageUrl" title="@Model.Name" style="width:100%; height: auto;" />
                                </div>
                                <div class="col-md-5">
                                    <h2>@Model.Name</h2>
                                    <hr />
                                    <h4>£@Model.Price</h4>
                                    <hr />
                                    <p>@Model.Description</p>
                                    <hr />
                                    <input type="submit" name="add" value="Add to Cart" class="btn btn-success" style="width:100%;">
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


